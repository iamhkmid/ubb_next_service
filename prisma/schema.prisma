generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  name      String
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Book {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  authorName    String     @map("author_name")
  price         Int
  stock         Int
  publisher     String
  description   String?
  printType     String     @map("print_type")
  numberOfPages Int        @map("number_of_pages")
  isbn          String
  slug          String     @unique
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")
  Image         Image?
  categoryIDs   String[]   @db.ObjectId
  Categories    Category[] @relation(fields: [categoryIDs], references: [id])
}

model Image {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  publicId  String   @unique @map("public_id")
  url       String
  secureUrl String   @map("secure_url")
  Book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  bookId    String   @unique @map("book_id") @db.ObjectId
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  nameId    String   @unique
  nameEn    String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  bookIDs   String[] @db.ObjectId
  Books     Book[]   @relation(fields: [bookIDs], references: [id])
}
